    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch all + watcher ðŸš€",
            "configurations": [
                "Backend (FastAPI + watcher)",
                "CAS Server",
                "Frontend (Vite)",
            ],
            "presentation": {
                "order": 1
            },
            "stopAll": true
        },
        {
            "name": "Launch all ðŸš€",
            "configurations": [
                "Backend (FastAPI)",
                "CAS Server",
                "Frontend (Vite)",
            ],
            "presentation": {
                "order": 2
            },
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Backend (FastAPI + watcher)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--log-config=none"
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Backend (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend",
            "preLaunchTask": "Run startup tasks"
        },
        {
            "name": "Frontend (Vite)",
            "command": "npm run dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/frontend",
            "preLaunchTask": "Generate client"
        },
        {
            "name": "CAS Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "npx --yes cas-server-mock --database=$PWD/cas-mock/data/cas-mock-users.json",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Open frontend (Chrome + HMR)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceRoot}/frontend/src"
        },
        {
            "name": "Open frontend (Firefox + HMR)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/",
        },
    ]
}