    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Frontend (vite)",
            "command": "npm run dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Launch frontend (Chrome + HMR)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceRoot}/frontend/src"
        },
        {
            "name": "Launch frontend (Firefox + HMR)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/",
        },
    ]
}
